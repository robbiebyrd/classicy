{
  "name": "classicy",
  "version": "0.5.1",
  "description": "A UI framework in React, replicating the user interface of Classic MacOS 8 (called Platinum).",
  "main": "index.js",
  "keywords": ["react", "typescript", "nextjs", "platinum", "macos-classic", "typescript-react"],
  "author": "Robbie Byrd <me@robbiebyrd.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run build-prod",
    "build-audio": "./scripts/build_sprites.sh",
    "build-watch": "webpack --mode development --stats-error-details --watch",
    "build-dev": "webpack --mode development --stats-error-details",
    "build-prod": "npm run setup-dist && npm run build-audio && webpack --mode production",
    "setup-dist": "npm run clean && cp package.json ./dist/package.json && cp README.md ./dist/README.md",
    "serve": "npx http-server dist/ -p 3000"
  },
  "dependencies": {
    "@mdxeditor/editor": "^3.39.1",
    "@plussub/srt-vtt-parser": "^2.0.5",
    "@tanstack/react-table": "^8.21.3",
    "classnames": "^2.5.1",
    "howler": "^2.2.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-json-tree": "^0.20.0",
    "react-player": "^3.3.1",
    "screenfull": "^6.0.2",
    "sha512-crypt-ts": "^0.1.27"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@svgr/webpack": "^8.1.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/webpack": "^5.28.5",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.4",
    "node-sass": "^9.0.0",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
